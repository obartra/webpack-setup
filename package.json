{
  "name": "webpack-setup",
  "version": "1.0.0",
  "description": "TS + Webpack boilerplate project with tree shaking and hot reloading",
  "main": "js/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "./node_modules/.bin/eslint src/*",
    "dev": "./node_modules/.bin/webpack-dev-server",
    "build-dev": "./node_modules/.bin/webpack --config webpack.config.js",
    "build": "./node_modules/.bin/webpack --config webpack.production.config.js",
    "map-explorer": "bash ./scripts/map-explorer.sh",
    "update": " ./node_modules/.bin/ncu -u && npm run build && npm test"
  },
