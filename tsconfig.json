{
	"compilerOptions": {
		"noImplicitAny": false,
		"removeComments": false,
		"allowJs": true,
		"target": "ES6"
	},
	"filesGlob": [
		"./src/*.ts",
		"!./node_modules",
		"typings/index.d.ts"
	],
	"awesomeTypescriptLoaderOptions": {
		"library": "es6",
		"forkChecker": true
	},
	"exclude": [
		"node_modules"
	]
}
